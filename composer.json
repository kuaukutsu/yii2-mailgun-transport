{
  "name": "kuaukutsu/yii2-mailgun-transport",
  "description": "Mailgun transport for Swift Mailer",
  "type": "yii2-extension",
  "license": "MIT License",
  "authors": [
    {
      "name": "Dmitriy Krivopalov",
      "email": "dimarik82@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/kuaukutsu/yii2-mailgun-transport/issues",
    "source": "https://github.com/kuaukutsu/yii2-mailgun-transport"
  },
  "require": {
    "php": "^7.4.0 || ^8.0",
    "yiisoft/yii2": "~2.0.14",
    "yiisoft/yii2-swiftmailer": "^2.0",
    "mailgun/mailgun-php": "^3.1",
    "php-http/curl-client": "^2.0",
    "guzzlehttp/psr7": "^1.5",
    "http-interop/http-factory-guzzle": "^1.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "rector/rector": "^1.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "kuaukutsu\\mailgun\\transport\\": "src"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "yiisoft/yii2-composer": true
    }
  }
}
